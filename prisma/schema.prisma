// 1. User Table
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  password      String
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  
  // Profile Info
  image         String?
  phone         String?
  dateOfBirth   DateTime?

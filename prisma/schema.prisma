  // Relations
  addresses     Address[] // ðŸ”¥ à¹€à¸Šà¸·à¹ˆà¸­à¸¡à¸à¸±à¸šà¸•à¸²à¸£à¸²à¸‡à¸—à¸µà¹ˆà¸­à¸¢à¸¹à¹ˆà¹ƒà¸«à¸¡à¹ˆ
  builds        Build[]
  orders        Order[]
  favorites     UserFavorite[]
  reviews       Review[]
}

enum Role {
  USER
  ADMIN
}

// ðŸ”¥ 2. Address Table (à¹ƒà¸«à¸¡à¹ˆ: à¹€à¸à¹‡à¸šà¸—à¸µà¹ˆà¸­à¸¢à¸¹à¹ˆà¸¥à¸°à¹€à¸­à¸µà¸¢à¸”)
model Address {
  id          String   @id @default(uuid())
  name        String   // à¸Šà¸·à¹ˆà¸­à¸œà¸¹à¹‰à¸£à¸±à¸š
  phone       String   // à¹€à¸šà¸­à¸£à¹Œà¸•à¸´à¸”à¸•à¹ˆà¸­
  
  // à¸—à¸µà¹ˆà¸­à¸¢à¸¹à¹ˆà¹à¸šà¸šà¸¥à¸°à¹€à¸­à¸µà¸¢à¸”
  houseNumber String   // à¸šà¹‰à¸²à¸™à¹€à¸¥à¸‚à¸—à¸µà¹ˆ, à¸«à¸¡à¸¹à¹ˆ, à¸‹à¸­à¸¢, à¸–à¸™à¸™
  subdistrict String   // à¸•à¸³à¸šà¸¥/à¹à¸‚à¸§à¸‡
  district    String   // à¸­à¸³à¹€à¸ à¸­/à¹€à¸‚à¸•
  province    String   // à¸ˆà¸±à¸‡à¸«à¸§à¸±à¸”
  zipcode     String   // à¸£à¸«à¸±à¸ªà¹„à¸›à¸£à¸©à¸“à¸µà¸¢à¹Œ
  
